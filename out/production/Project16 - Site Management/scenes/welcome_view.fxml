<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #009DE9;"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.WelcomeController">

    <stylesheets>
        <URL value="@styles/style.css"/>
    </stylesheets>

    <children>
        <GridPane layoutX="6.0" prefHeight="279.0" prefWidth="594.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="btn_site_management" mnemonicParsing="false" onAction="#didClick_btn_SiteManagement"
                        prefHeight="50.0" prefWidth="250.0" text="Site Management" GridPane.halignment="RIGHT"
                        GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Button>
                <Button fx:id="btn_employee_management" mnemonicParsing="false"
                        onAction="#didClick_btn_EmployeeManagement" prefHeight="50.0" prefWidth="250.0"
                        text="Employee Management" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                        GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Button>
                <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                    <children>
                        <Button fx:id="sinhala_btn" mnemonicParsing="false" onAction="#didClick_btn_sinhala"
                                text="සිංහල">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="english_btn" mnemonicParsing="false" onAction="#didClick_btn_english"
                                text="English">
                            <HBox.margin>
                                <Insets bottom="10.0" left="5.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</AnchorPane>
